namespace Seeder;

table HelloRequest {
    address: string;
}

struct PingRequest {
    send_your_connections: bool;
}

struct GetPeersRequest {
    number_of_peers: byte;
}

union RequestType { HelloRequest, PingRequest, GetPeersRequest }

table Request {
    id: ushort;
    request: RequestType;
}

root_type Request;